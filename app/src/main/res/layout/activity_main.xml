<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.android.jaysyurahman_1202154199_si3907.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:padding="27dp"
        android:textAlignment="center">

        <TextView
            android:id="@+id/Judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Makan Malam"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/JudulBawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sama Gebetan"
            android:textAlignment="center"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:padding="20dp">

        <EditText
            android:id="@+id/namaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Nama Menu"
            android:inputType="textPersonName"
            android:text="Nasi Uduk" />

        <EditText
            android:id="@+id/jumlahPorsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/namaMakanan"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Banyak Porsi"
            android:inputType="number"
            android:text="2" />

        <Button
            android:id="@+id/btnEatbus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/jumlahPorsi"
            android:layout_marginTop="28dp"
            android:onClick="eatbus"
            android:text="EATBUS" />

        <Button
            android:id="@+id/btnAbnormal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnEatbus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="abnormal"
            android:text="ABNORMAL" />
    </RelativeLayout>


</LinearLayout>
